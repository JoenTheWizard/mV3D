<Window x:Class="mV3DViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="http://helix-toolkit.org/wpf"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:local1="clr-namespace:WPFSurfacePlot3D"
        xmlns:ExtendedToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="mV3DViewer" Height="830.817" Width="1569.818"
        Icon="Assets/logo3d.ico"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        SizeChanged="Window_SizeChanged">

    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="0"
        ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ImageBrush x:Key="tb_mouse_over" ImageSource="Assets/mnuhov.PNG"/>
        <Style x:Key="font_style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="ToolTip" x:Key="tt_style">
            <Setter Property="Placement" Value="Right"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#4A5668"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="PlacementRectangle" Value="60,0,0,0"/>
            <Setter Property="HorizontalOffset" Value="15"/>
            <Setter Property="VerticalOffset" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>

        </Style>

        <Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="border" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource tb_mouse_over}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource tb_mouse_over}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource tb_mouse_over}"/>
                                <Setter Property="Background" TargetName="border" Value="{StaticResource tb_mouse_over}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TransparentStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#454545"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid Background="Transparent">
                                <ContentPresenter></ContentPresenter>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MyScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#3b3b3b"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="5"/>
                    <Setter Property="Height" Value="Auto" />

                </Trigger>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="Height" Value="5" />

                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="bg_setting" Background="#FF292929">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="736*"/>
            <ColumnDefinition Width="183*"/>
            <ColumnDefinition Width="335*"/>
        </Grid.ColumnDefinitions>
        <helix:HelixViewport3D x:Name="viewPort3d" MouseDown="viewPort3d_MouseDown" ZoomExtentsWhenLoaded="true" Margin="424,66,48,167" Background="AntiqueWhite" Grid.ColumnSpan="3" Grid.Row="1" BorderThickness="3,3,3,3" BorderBrush="Black" ShowFrameRate="True" 
                               KeyDown="viewPort3d_KeyDown"
                               ShowCameraInfo="False" 
                               FontFamily="Consolas" 
                               InfoBackground="Transparent"
                               AllowDrop="True"
                               ShowCoordinateSystem="True" Drop="viewPort3d_Drop">
            <!-- Remember to add light to the scene -->
            <!--<helix:CuttingPlaneGroup x:Name="cuttingGroup1">
                <helix:CuttingPlaneGroup.CuttingPlanes>
                    <helix:Plane3D Normal="0,-0.3,0"/>
                    <helix:Plane3D Normal="2,-1,0.1"/>
                </helix:CuttingPlaneGroup.CuttingPlanes>
                <helix:SphereVisual3D Center="0,0,2" BackMaterial="{helix:Material Blue}" Material="{helix:Material LightBlue}"/>
                <helix:CubeVisual3D Center="0.2,0.1,0" SideLength="2" BackMaterial="{helix:Material Green}" Material="{helix:Material LightGreen}"/>
                <helix:TruncatedConeVisual3D Origin="0.2,0.1,3" BackMaterial="{helix:Material Red}" Material="{helix:Material LightCoral}"/>
            </helix:CuttingPlaneGroup>-->
            <helix:DefaultLights/>
        </helix:HelixViewport3D>
        <StatusBar Background="#3e84c9" Grid.Row="1" VerticalAlignment="Bottom" Height="20" Grid.ColumnSpan="3" Margin="62,0,0,0">
            <Label x:Name="lblcam" Height="21" Width="23" Margin="1,-5,0,0" Foreground="White" FontSize="10" Content="📷" RenderTransformOrigin="0.486,0.048"/>
        </StatusBar>
        <TextBlock Text="{Binding Camera.Position, ElementName=viewPort3d, StringFormat=Cam Pos: \{0:0.0\}}" Margin="90,0,0,0" Grid.RowSpan="2" Foreground="White" FontFamily="Consolas" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="Auto" Height="20"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
        <Grid x:Name="titleGrid" VerticalAlignment="Top" Height="22"  Background="#4e4f52" Grid.ColumnSpan="3" Grid.RowSpan="2"  HorizontalAlignment="Stretch" MouseDown="titleGrid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="448*"/>
                <ColumnDefinition Width="447*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label" Content="mV3DViewer" HorizontalAlignment="Left" Margin="75,-1,0,0" VerticalAlignment="Top" Height="23" Width="1307" FontFamily="Consolas" Foreground="White" Grid.ColumnSpan="2"/>
            <Button x:Name="button" Grid.ColumnSpan="2" Background="Transparent" Foreground="White" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Width="44" Height="22" Click="button_Click" FontSize="10" BorderThickness="0,0,0,0" Style="{StaticResource TransparentStyle}">
                <Button.ToolTip>
                    <ToolTip x:Name="tt_close" Content="Close"/>
                </Button.ToolTip>
                <Button.Content>
                    <Grid Margin="0 0 0 0">
