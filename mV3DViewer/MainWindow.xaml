                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <GridSplitter Background="#8b8b8b" Grid.Row="1" HorizontalAlignment="Stretch"/>
                    <TextBlock x:Name="selectedItmLbl" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0">No item selected</TextBlock>
                    <!--<DataGrid Name="gridSelected" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Margin="5,40,5,365" Width="365" CanUserAddRows="False" IsReadOnly="True"></DataGrid>-->
                    <ExtendedToolkit:PropertyGrid 
                        x:Name="propertyGrid"
                        Grid.Row="0"
                        AutoGenerateProperties="True" 
                        ShowSearchBox="True"
                        IsCategorized="False"
                        ShowSortOptions="True"
                        ShowSummary="False"
                        ShowTitle="False"
                        UpdateTextBoxSourceOnEnterKey="True"
                        IsReadOnly="False"
                        FontFamily="Consolas"
                        Margin="0,40,0,0"
                        Height="Auto"
                        BorderThickness="0,0,0,0"
                        ShowHorizontalScrollBar="True" 
                        HorizontalContentAlignment="Center" 
                        VerticalContentAlignment="Top">
                        <ExtendedToolkit:PropertyGrid.AdvancedOptionsMenu>
                            <ContextMenu>
                                <MenuItem Name="miCopyProperty" Header="Copy"/>
                            </ContextMenu>
                        </ExtendedToolkit:PropertyGrid.AdvancedOptionsMenu>
                        <ExtendedToolkit:PropertyGrid.Resources>
                            <Style TargetType="{x:Type ExtendedToolkit:PropertyItemsControl}">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="Red"/>
                            </Style>
                            <Style TargetType="{x:Type ExtendedToolkit:PropertyGrid}">
                                <Setter Property="Background" Value="#363636"/>
                            </Style>
                        </ExtendedToolkit:PropertyGrid.Resources>
                    </ExtendedToolkit:PropertyGrid>
                    <!--<Separator Margin="10,0,10,0" VerticalAlignment="Stretch"/>-->
                    <TextBlock Grid.Row="2" Text="Create Object" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Margin="0,0,0,0"/>
                    <ScrollViewer Height="Auto" Width="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="2" VerticalScrollBarVisibility="Auto" VerticalAlignment="Center">
                        <ListView x:Name="MeshObjectList" Margin="0,20,0,0" Height="Auto" Width="Auto">
                            <ListViewItem Background="#3a3a3a" Margin="10,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/cube3d.png" Height="65" Width="100"/>
                                    <TextBlock Margin="0,25,0,0" FontSize="15" Text=" Cube"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="#3a3a3a" Margin="10,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/sphere3d.png" Height="65" Width="100"/>
                                    <TextBlock Margin="0,25,0,0" FontSize="15" Text=" Sphere"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="#3a3a3a" Margin="10,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/ellipsoid3d.png" Height="65" Width="100"/>
                                    <TextBlock Margin="0,25,0,0" FontSize="15" Text=" Ellipsoid"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="#3a3a3a" Margin="10,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/cylinder3d.png" Height="65" Width="100"/>
                                    <TextBlock Margin="0,25,0,0" FontSize="15" Text=" Cylinder"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="#3a3a3a" Margin="10,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/cone3d.png" Height="65" Width="100"/>
                                    <TextBlock Margin="0,25,0,0" FontSize="15" Text=" Cone"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="#3a3a3a" Margin="10,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/torus3d.png" Height="65" Width="100"/>
                                    <TextBlock Margin="0,25,0,0" FontSize="15" Text=" Torus"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="#3a3a3a" Margin="10,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/text3d.png" Height="65" Width="100"/>
                                    <TextBlock Margin="0,25,0,0" FontSize="15" Text=" Text"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Textures">
                <Grid>
                    <TextBlock x:Name="selectedTxture" Foreground="White" Margin="10,0,0,0" FontFamily="Consolas">Selected Texture: None</TextBlock>
                    <ListView Margin="0,25,0,0" FontFamily="Consolas" FontSize="20">
                        <Separator/>
                        <ListViewItem MouseDoubleClick="ListViewItem_MouseDoubleClick_4">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Textures/bricktexture.jpg" Height="32" Width="32"/>
                                <TextBlock Text=" Bricks"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem MouseDoubleClick="ListViewItem_MouseDoubleClick_5">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Textures/papertexture.jpg" Height="32" Width="32"/>
                                <TextBlock Text=" Paper"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem MouseDoubleClick="ListViewItem_MouseDoubleClick_6">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Textures/marbletexture.jpg" Height="32" Width="32"/>
                                <TextBlock Text=" Marble"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem MouseDoubleClick="ListViewItem_MouseDoubleClick_7">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Textures/woodtexture.jpg" Height="32" Width="32"/>
                                <TextBlock Text=" Wood"/>
                            </StackPanel>
                        </ListViewItem>
                        <Separator/>
                        <ListViewItem MouseDoubleClick="ListViewItem_MouseDoubleClick_8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Transparent"/>
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="mV3D Scripter">
                <Grid>
                    <TextBlock x:Name="filemVComp" FontFamily="Consolas" Foreground="White" Text="File:" Margin="0,10,0,0"/>
                    <!--<TextBox x:Name="codeComp" Foreground="White" Width="320" Height="Auto" Background="Black" AcceptsReturn="True" Margin="0,35,0,40"/>-->
                    <avalonEdit:TextEditor
                    Background="#333333"
                    Foreground="White"
                    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                    x:Name="codeComp"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="JavaScript"
                    FontFamily="Consolas"
                    Width="320" Height="Auto"
                    FontSize="10pt" Margin="0,35,0,40"/>
                    <Grid VerticalAlignment="Bottom" Width="Auto" Height="25" Background="#4b4b4b">
                        <Button x:Name="codeExec"  Margin="5,0,0,0"  HorizontalAlignment="Left" Content="Execute" Height="Auto" Click="codeExec_Click"/>
                        <Button x:Name="loadmV3dFile"  Margin="98,0,0,0"  HorizontalAlignment="Left" Content="Load File" Height="Auto" Click="loadmV3dFile_Click" Background="Transparent"/>
                        <Button x:Name="savemV3dFile"  Margin="206,0,0,0"  HorizontalAlignment="Left" Content="Save File" Height="Auto" Click="savemV3dFile_Click" Background="Transparent"/>
                        <Button x:Name="codeExec_2"  Margin="314,0,0,0" Width="20" HorizontalAlignment="Left" Height="Auto" Click="codeExec_2_Click" Background="Transparent"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="3D Grapher">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <GridSplitter Grid.Row="1" Background="#6b6b6b" HorizontalAlignment="Stretch"/>
                    <helix:HelixViewport3D 
            x:Name="hViewport" 
            Grid.Row="0" 
            ZoomExtentsWhenLoaded="True" 
            PanGesture="LeftClick" 
            ShowViewCube="False"
             Background="Wheat"
                        
                        ShowFrameRate="True"
                        InfoBackground="Transparent"
            ShowCoordinateSystem="{Binding ShowMiniCoordinates, UpdateSourceTrigger=PropertyChanged}" 
            CoordinateSystemLabelX="{Binding XAxisLabel, UpdateSourceTrigger=PropertyChanged}" 
            CoordinateSystemLabelY="{Binding YAxisLabel, UpdateSourceTrigger=PropertyChanged}" 
            CoordinateSystemLabelZ="{Binding ZAxisLabel, UpdateSourceTrigger=PropertyChanged}" 
            MouseDown="hViewport_MouseDown">
                        <helix:HelixViewport3D.Camera>
                            <PerspectiveCamera LookDirection="1,1,-1" UpDirection="0,0,1"/>
                        </helix:HelixViewport3D.Camera>

                        <!-- Lights -->
                        <ModelVisual3D Content="{Binding Lights, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- The plot visual (surface, axes and labels) -->
                        <local1:SurfacePlotVisual3D 
                DataPoints="{Binding DataPoints, UpdateSourceTrigger=PropertyChanged}" 
                ColorValues="{Binding ColorValues, UpdateSourceTrigger=PropertyChanged}" 
                SurfaceBrush="{Binding SurfaceBrush, UpdateSourceTrigger=PropertyChanged}" 
                />
                    </helix:HelixViewport3D>
                    <TextBox x:Name="plotTxtBox" PreviewMouseDown="plotTxtBox_PreviewMouseDown" Foreground="White" Background="Black" Margin="0,0,0,37"
                             FontFamily="Consolas" Grid.Row="2"
                             KeyDown="plotTxtBox_KeyDown" 
                             Focusable="True"
                             VerticalScrollBarVisibility="Auto">
                        <TextBox.ToolTip>
                            <ToolTip Content="3D Plotter"/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Button x:Name="btnPlot" Margin="0,0,0,0" Content="Execute" Grid.Row="2" VerticalAlignment="Bottom"
                            HorizontalAlignment="Left" Click="btnPlot_Click" FontFamily="Consolas"/>
                    <Button x:Name="btnPlotSave" Margin="100,0,0,0" VerticalAlignment="Bottom" Grid.Row="2"
                            Content="Save as" HorizontalAlignment="Left" FontFamily="Consolas" Background="Transparent" Click="btnPlotSave_Click"/>
                </Grid>
            </TabItem>
        </dragablz:TabablzControl>

        <Grid Grid.Column="1" Background="#404040" HorizontalAlignment="Right" Height="24" Margin="0,45,50,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="417" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Grid.RenderTransform>
                <TransformGroup >
                    <ScaleTransform ScaleY="-1" ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Label x:Name="fileNamelbl" Content="" HorizontalAlignment="Left" Margin="1,-3,0,-1" VerticalAlignment="Top" Height="28" RenderTransformOrigin="0.5,0.5" Width="416" Foreground="White" FontFamily="Consolas" FontSize="14">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
        </Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="35" Margin="3,5,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="59" Source="logo3d.PNG" Stretch="Uniform"/>
        <Grid x:Name="nav_pnl" HorizontalAlignment="Left" Height="Auto" Margin="0,22,0,0" Grid.RowSpan="2" Width="62" Background="#3b3b3b">
            <StackPanel x:Name="st_Pnl">
                <Grid Height="90">
                    <TextBlock Grid.Row="1" 
                               Grid.Column="0"
                               Margin="73,-20,0,0"
                               Text="O P T I O N S"
                               Foreground="White"
                               FontFamily="Consolas"
                               FontSize="18"
                               Background="Transparent"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Style="{StaticResource font_style}">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="1" Direction="-90" Color="White"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <ToggleButton x:Name="tg_btn"
                                  Grid.Column="0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="10,17,0,29"
                                  Height="44"
                                  Width="42"
                                  BorderThickness="0"
                                  Style="{StaticResource tb_style}" Unchecked="tg_btn_Unchecked" Checked="tg_btn_Checked">
                        <ToggleButton.Background>
                            <ImageBrush ImageSource="menutabimg.PNG"
                                        Stretch="Uniform"></ImageBrush>
                        </ToggleButton.Background>

                        <ToggleButton.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="hideStackPanel">
                                        <DoubleAnimation Storyboard.TargetName="nav_pnl" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="230" To="65" Duration="0:0:0.2">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="ShowStackPanel">
                                        <DoubleAnimation Storyboard.TargetName="nav_pnl" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="65" To="230" Duration="0:0:0.3">

                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                        </ToggleButton.Triggers>

                    </ToggleButton>

                </Grid>

                <!--// ListView with menu list items//-->
                <ListView x:Name="LV"
                          Background="Transparent"
                          BorderBrush="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem HorizontalAlignment="Left"
                                  Margin="0,0,0,15" MouseDoubleClick="ListViewItem_MouseDoubleClick" MouseEnter="ListViewItem_MouseEnter"
                                  >
                        <StackPanel Orientation="Horizontal"
                                    Width="230">
                            <Image Source="Assets/foldericon.PNG"
                                   Stretch="None"
                                   Margin="1,0,0,0" Width="42" Height="48"/>
                            <TextBlock Text="Open File"
                                       Margin="25,6,0,0"
                                       FontSize="17"
                                       Style="{StaticResource font_style}"/>
                        </StackPanel>
                        <!--// Tooltip //-->
                        <ListViewItem.ToolTip>
                            <ToolTip x:Name="tt_folder"
                                     Content="Select file"
                                     Style="{StaticResource tt_style}"/>
                        </ListViewItem.ToolTip>
                    </ListViewItem>
                    <Separator/>

                    <ListViewItem HorizontalAlignment="Left"
                                  Margin="0,0,0,15"  MouseEnter="ListViewItem_MouseEnter" MouseDoubleClick="ListViewItem_MouseDoubleClick_1">
                        <StackPanel Orientation="Horizontal"
                                    Width="230">
                            <Image Source="Assets/newfile.png"
                                   Stretch="None"
                                   Margin="-1,-4,0,0" Width="48" Height="50"/>
                            <TextBlock Text="New File"
                                       Margin="20,6,0,0"
                                       FontSize="17"
                                       Style="{StaticResource font_style}"/>
                        </StackPanel>
                        <!--// Tooltip //-->
                        <ListViewItem.ToolTip>
                            <ToolTip x:Name="tt_newfile"
                                     Content="New file"
                                     Style="{StaticResource tt_style}"/>
                        </ListViewItem.ToolTip>
