                    </Grid>
                </Button.Content>
            </Button>
            <Button x:Name="button1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,69,0" VerticalAlignment="Top" Width="44" Height="22" Background="Transparent" Foreground="White"
                    BorderThickness="0,0,0,0" Click="button1_Click" Style="{StaticResource TransparentStyle}">
                <Button.Content>
                    <Path Data="M0.2777243,2.99998 L8.2227571,2.99998 M1.7222757,4.66663" Stroke="White" StrokeThickness="2" HorizontalAlignment="Center" Stretch="None" Margin="16,11.667,19.499,1.667" Width="8.501"/>
                </Button.Content>
                <Button.ToolTip>
                    <ToolTip Content="Minimize"/>
                </Button.ToolTip>
            </Button>
            <Button x:Name="maximumMin" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,24,0" VerticalAlignment="Top" Width="44" Height="22" Background="Transparent" Foreground="White"
                BorderThickness="0,0,0,0" Content="🗖" Click="maximumMin_Click" Padding="1,0"/>
        </Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="19" Margin="62,22,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="145">
