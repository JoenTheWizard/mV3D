                <MenuItem Header="_New" Click="MenuItem_Click"/>
                <MenuItem Header="_Open" Click="MenuItem_Click_1"/>
                <MenuItem Header="_Open external model" />
                <Separator/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Save As"/>
                <Separator/>
                <MenuItem Header="_Close"/>
            </MenuItem>
            <MenuItem Header="_Edit" FontFamily="Consolas" VerticalAlignment="Top" Height="19">
                <MenuItem Header="Gridlines" Click="MenuItem_Click_2"/>
            </MenuItem>
        </Menu>
        <dragablz:TabablzControl HorizontalAlignment="Left" x:Name="dragableTab" Margin="67,60,0,25" Background="#242424" Grid.RowSpan="2" Style="{DynamicResource MaterialDesignAlternateTabablzControlStyle}" Width="352" FontFamily="Consolas">
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
            <TabItem Header="Object" IsSelected="True">
